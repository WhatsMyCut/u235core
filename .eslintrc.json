{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "impliedStrict": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "templateStrings": true
    }
  },
  "env": {
    "node": true
  },
  "rules": {
    "eqeqeq": 0,
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "keyword-spacing": 2,
    "no-alert": 2,
    "no-console": 2,
    "no-debugger": 2,
    "no-extra-parens": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "one-var": [2, "never"],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "space-infix-ops": [2, {"int32Hint": true}]
  }
}
